{% assign requestBody = 'grant_type=client_credentials' %}

{
    "fullUrl": "{{ content.message.BaseUrl }}",
    "httpMethod": "POST",
    "headers": {
        "Content-Type": "application/x-www-form-urlencoded",
        "x-secret": "{{content.specialSecret}}"
    },
    "authentication": {
        "username": "{{content.message.UserName}}",
        "password": "{{content.secret}}",
        "type": "Basic"
    },
    "requestBody":"{{ requestBody }}"
}