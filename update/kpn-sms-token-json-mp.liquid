{% comment %} 
################################################################################################# 
# KPN SMS API Token Request Template
# This template formats the OAuth token request for KPN SMS API
# Following the same pattern as kpnsngr-token-2-genesys-json-mp.liquid
#################################################################################################
{% endcomment %}
{% assign inputBaseUrl = content.baseUrl %}
{% assign inputClientId = content.clientId %}
{% assign inputClientSecret = content.clientSecret %}

{% comment %} 
################################################################################################# 
# Build OAuth Token Request - Following Genesys Pattern
#################################################################################################
{% endcomment %}
{
    "fullUrl": "{{ inputBaseUrl }}",
    "httpMethod": "POST",
    "headers": {
        "Content-Type": "application/x-www-form-urlencoded"
    },
    "requestBody": "grant_type=client_credentials&client_id={{ inputClientId }}&client_secret={{ inputClientSecret }}",
    "outputAction": "token_request"
}
